{
  "info": {
    "name": "RAG App API",
    "description": "Colección de endpoints para la aplicación RAG",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Obtener Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "token"]
            },
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "testuser",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "testpassword",
                  "type": "text"
                }
              ]
            },
            "description": "Obtiene un token de acceso para usar la API"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"access_token\", jsonData.access_token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Documentos",
      "item": [
        {
          "name": "Subir Documento",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "documents", "upload"]
            },
            "description": "Sube un documento para procesamiento RAG"
          }
        },
        {
          "name": "Obtener Estado de Base de Datos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/documents/database/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "documents", "database", "stats"]
            },
            "description": "Obtiene información relevante sobre el estado de la base de datos vectorial"
          }
        },
        {
          "name": "Limpiar Base de Datos",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/documents/database/clear",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "documents", "database", "clear"]
            },
            "description": "Limpia todos los documentos de la base de datos vectorial"
          }
        },
        {
          "name": "Listar Documentos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/documents/list",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "documents", "list"]
            },
            "description": "Obtiene la lista de nombres de documentos cargados en el sistema"
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Realizar Consulta",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"question\": \"¿Qué información puedes encontrar sobre...?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "chat"]
            },
            "description": "Realiza una consulta al sistema RAG"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}